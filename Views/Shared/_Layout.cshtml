<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wall'sBlog</title>
    <link rel="icon" href="~/imgs/wallblog-icon.webp" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/web-font/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/web-font/js/all.min.js" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster+Two:ital,wght@0,400;0,700;1,400;1,700&family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,400;1,500;1,600;1,700;1,800;1,900&family=Nunito:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Playfair:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg nav-bg navbar-dark shadow" id="nav-fixed-top">
      <div class="container">

        <button
        id="navbarToggler"
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
          <span class="open-icon"><i class="fa-solid fa-bars"></i></span>
          <span class="close-icon" style="display: none"
          ><i class="fa-solid fa-xmark"></i
        ></span>
        </button>

        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
        >Wall'sBlog</a>

        <div class="navbar-custom collapse navbar-collapse justify-content-end" id="navbar">
          <ul class="navbar-nav">
             <li class="nav-item">
            <a
              class="nav-link text-light"
              asp-area=""
              asp-controller="Home"
              asp-action="Index"
              >HOME</a>
            </li>
           <li class="nav-item">
            <a
              class="nav-link text-light"
              asp-area=""
              asp-controller="Posts"
              asp-action="Index"
              >BLOGS</a>
          </li>
             <li class="nav-item">
            <a
              class="nav-link text-light"
              asp-area=""
              asp-controller="Home"
              asp-action="Portfolio"
              >PORTFOLIO</a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link text-light"
              asp-area=""
              asp-controller="Home"
              asp-action="Contact"
              >CONTACT</a>
          </li>
          </ul>
        </div>
      </div>
    </nav>
  
    <div class="container-fluid-lg body-padding">
      <main role="main">
          @RenderBody()
      </main>
    </div>   
 

  <footer class="border-top text-muted footer footer">
  <div class="container p-3 d-flex justify-content-center align-items-center">
    <div class="row">
      <div
        class="col-md-4 col-lg-4 contact-box"
      >
        <div class="contact-box__icon">
          <i class="fa-solid fa-square-phone"></i>
        </div>
        <div class="contact-box__info">
          <a href="#" class="contact-box__info--title">+84 378941261</a>
          <p class="contact-box__info--subtitle">Mon-Fri 9am-6pm (+7 GMT)</p>
        </div>
      </div>

      <div
        class="col-md-4 col-lg-4 contact-box"
      >
        <div class="contact-box__icon">
          <i class="fa-solid fa-envelope"></i>
        </div>
        <div class="contact-box__info">
          <a href="#" class="contact-box__info--title"
            >phuctuong0862@gmail.com</a
          >
          <p class="contact-box__info--subtitle">Online support</p>
        </div>
      </div>

      <div
        class="col-md-4 col-lg-4 contact-box"
      >
        <div class="contact-box__icon">
          <i class="fa-solid fa-map-location-dot"></i>
        </div>
        <div class="contact-box__info">
          <a href="#" class="contact-box__info--title">Can Tho, VN</a>
          <p class="contact-box__info--subtitle">9 CMT8, An Hoa, Ninh Kieu</p>
        </div>
      </div>
    </div>
  </div>

   <div class="container-fluid footer-sm p-3 d-flex justify-content-center align-items-center" style="background-color: #000000">
      <div class="row text-center text-light">
        <div class="col-md-6 mb-4 mb-md-0 text-nowrap pt-2 pb-2">
          Connect with me on social media
        </div>
        <div class="col-md-6 mb-md-0">
          <a href="https://www.facebook.com/tuong.huynhphuc.39?mibextid=ZbWKwL" target="_blank"><i class="fab fa-facebook"></i></a>
          <a href="https://github.com/WallHuynh" target="_blank"><i class="fab fa-github"></i></a>
          <a href="https://www.linkedin.com/in/tuong-huynh-phuc-60198a228" target="_blank"><i class="fab fa-linkedin"></i></a>
          <a href="https://instagram.com/wallhuynh_17?igshid=MzNlNGNkZWQ4Mg==" target="_blank"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    </div>

    <div class=" container-fluid footer-bottom pt-5 pb-5">
    <div class="container">
      <div class="row text-center text-white">
        <div class="col-12">
          <div class="footer-bottom__copyright">
            &COPY; Copyright 2023 <a asp-controller="Home" asp-action="Index">Wall'sBlog</a>
          </div>
        </div>
      </div>
    </div>
  </div>

</footer>

</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>
